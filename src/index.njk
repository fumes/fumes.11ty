---
eleventyExcludeFromCollections: true
layout: base
role: "home"
permalink: /
---
<div class="content {% if category %}{{ category }}{% else %}index{% endif %} {% if offwhite %}offwhite_content{% endif %}">

  <div class="wrapper">

    <div class="post_cards">

      {% set articles = collections.article | reverse %}

      {% for post in articles.slice(0,15) %}

        {% include "partials/index_post_block--excerpt.njk" %}

      {% endfor %}

    </div>

    {% include "partials/loop_posts--home.njk" %}

    {% include "partials/nav_tag_cloud.njk" %}

  </div>

</div>
